{{#if features.docker}}
version: '3.8'

services:
  api:
    build:
      context: .
      target: api
    ports:
      - "8000:8000"
    environment:
      - NODE_ENV=production
    {{#if features.database}}
    depends_on:
      - postgres
    {{/if}}

  web:
    build:
      context: .
      target: web
    ports:
      - "80:80"
    depends_on:
      - api

  {{#if features.database}}
  postgres:
    image: postgres:15-alpine
    environment:
      POSTGRES_DB: {{projectName}}
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

volumes:
  postgres_data:
  {{/if}}
{{/if}}