# API Configuration
PORT=8000
NODE_ENV=development

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/myapp

# Authentication
AUTH_SECRET=your-auth-secret-here
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# AI Configuration
AI_PROVIDER=openai  # openai, anthropic, google, azure-openai

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-5  # gpt-5, gpt-4, gpt-4-turbo, gpt-3.5-turbo

# Anthropic Claude API  
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-opus-4.1  # claude-opus-4.1, claude-3-5-sonnet-20241022, claude-3-haiku-20240307

# Google Gemini API
GOOGLE_API_KEY=your-google-api-key
GOOGLE_MODEL=gemini-2.5-pro  # gemini-2.5-pro, gemini-1.5-flash, gemini-1.5-pro

# Azure OpenAI API
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=your-azure-endpoint
AZURE_OPENAI_MODEL=gpt-5  # Deployment name in Azure