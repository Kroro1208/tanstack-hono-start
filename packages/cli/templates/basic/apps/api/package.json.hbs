{
  "name": "@{{projectName}}/api",
  "version": "0.1.0",
  "description": "API server built with Hono",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    {{#if features.vitest}}
    "test": "vitest",
    "test:ui": "vitest --ui",
    {{/if}}
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "@hono/node-server": "^1.4.0",
    "@hono/zod-openapi": "^0.9.0",
    "@hono/swagger-ui": "^0.2.0",
    "zod": "^3.22.0",
    "@mastra/core": "^0.13.0",
    "cors": "^2.8.5"{{#if features.auth}},
    "@auth/core": "^0.18.0",
    "@auth/hono-adapter": "^0.2.0"{{/if}}{{#if features.database}},
    "drizzle-orm": "^0.29.0",
    "postgres": "^3.4.0"{{/if}}
  },
  "devDependencies": {
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17"{{#if features.vitest}},
    "vitest": "^1.1.0",
    "@vitest/ui": "^1.1.0"{{/if}}{{#if features.database}},
    "drizzle-kit": "^0.20.0",
    "@types/pg": "^8.10.0"{{/if}}
  }
}